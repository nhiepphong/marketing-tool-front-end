{
  "name": "marketing-tool",
  "version": "0.1.0",
  "private": true,
  "homepage": "./",
  "main": "./dist/main.js",
  "type": "commonjs",
  "dependencies": {
    "@reduxjs/toolkit": "^2.2.1",
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "@types/animejs": "^3.1.12",
    "@types/jest": "^27.5.2",
    "@types/victor": "^1.1.5",
    "animejs": "^3.2.2",
    "axios": "^1.6.7",
    "classnames": "^2.5.1",
    "crypto-js": "^4.2.0",
    "electron-log": "^5.1.5",
    "puppeteer": "^22.12.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-redux": "^9.1.0",
    "react-scripts": "^5.0.1",
    "react-toastify": "^10.0.5",
    "redux-persist": "^6.0.0",
    "redux-thunk": "^3.1.0",
    "styled-components": "^6.1.8",
    "tailwindcss-safe-area": "^0.5.1",
    "ts-loader": "^9.5.1",
    "typescript": "^4.9.5",
    "victor": "^1.1.0",
    "web-vitals": "^2.1.4"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "build-electron": "tsc -p tsconfig.electron.json",
    "electron:dev": "concurrently \"cross-env BROWSER=none npm start\" \"wait-on http://localhost:3000 && cross-env NODE_ENV=development npm run build-electron && electron .\"",
    "electron:prod": "npm run build && cross-env NODE_ENV=production npm run build-electron && electron .",
    "electron:build": "npm run build && npm run build-electron && electron-builder build --mac --win",
    "postinstall": "electron-builder install-app-deps"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@types/crypto-js": "^4.2.2",
    "@types/puppeteer": "^7.0.4",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "autoprefixer": "^10.4.17",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^31.0.2",
    "electron-builder": "^24.13.3",
    "electron-is-dev": "^3.0.1",
    "postcss": "^8.4.35",
    "react-router-dom": "^6.22.1",
    "sass": "^1.71.1",
    "tailwindcss": "^3.4.4",
    "tailwindcss-safe-area": "^0.5.1",
    "wait-on": "^7.2.0",
    "webpack": "^5.90.3",
    "webpack-cli": "^5.1.4"
  },
  "build": {
    "appId": "vn.codev.marketing-tool",
    "productName": "MarketingTool",
    "files": [
      "build/**/*",
      "dist/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "assets",
      "output": "release"
    },
    "extraMetadata": {
      "main": "./dist/main.js"
    },
    "win": {
      "icon": "assets/icon.png"
    },
    "mac": {
      "icon": "assets/icon.icns"
    },
    "linux": {
      "icon": "assets/icon.png"
    }
  }
}
